@model Shop.Models.Order.OrderDetail
@{
    ViewBag.Title = "DeleteByCustomer";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<main class="cart-page default" dir="rtl">
    <div class="container">
        <div class="row">
            <div style="background:white;" class="cart-page-content col-xl-12 col-lg-12 col-md-12 order-1">
                <div class="cart-page-title">
                    <h1>از حذف این سفارش مطمئن هستید؟</h1>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr style="background:#ff8d00; color:white;">
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.ImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SinglePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubTotalPrice)
                                </th>


                            </tr>
                            <tr>
                                <td>
                                    <img style="width:50px;height:50px;" src="@Url.Content(Model.Product.ImageUrl)" />
                                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Product.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.SinglePrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.SubTotalPrice)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="حذف سفارش" class="dk-btn dk-btn-danger " />
        <a href="~/Manage/Profile" class="pull-left-container dk-btn-info"
           style="padding: 18px 80px;
                  border-radius: 8px;

                  color: #fff;
                  text-align: center;
                  display: inline-block;
                  border: none;
                  cursor: pointer;
                  position: relative;
                  white-space: nowrap;
                  line-height: 22px;
                  text-decoration: none;
                  margin-top: 5px;">
            پروفایل من
            <i class="now-ui-icons icon-success"></i>
        </a>
    </div>
    }
</div>


