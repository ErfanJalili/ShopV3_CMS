    <script src="~/Content/TopKala/assets/js/now-ui-kit.js" type="text/javascript"></script>
    <!--  CountDown -->
    <script src="~/Content/TopKala/assets/js/plugins/countdown.min.js" type="text/javascript"></script>
    <!--  Plugin for Sliders -->
    <script src="~/Content/TopKala/assets/js/plugins/owl.carousel.min.js" type="text/javascript"></script>
    <!--  Jquery easing -->
    <script src="~/Content/TopKala/assets/js/plugins/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <!-- Main Js -->
    <script src="~/Content/TopKala/assets/js/main.js" type="text/javascript"></script>

}


</html>