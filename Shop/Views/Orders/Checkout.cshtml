@model Shop.Models.Order.Order
@{
    ViewBag.Title = "Checkout";

}

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/TopKala/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/TopKala/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
          name='viewport' />
    <title>IranLusr</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="~/Content/TopKala/assets/fonts/font-awesome/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="~/Content/TopKala/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/now-ui-kit.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/main.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.TotalPrice)
            @Html.HiddenFor(model => model.OrderCoponId)
            @Html.HiddenFor(model => model.OrderStatusId)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.FactorNumber)

            <div class="wrapper default">
                <div class="container">
                    <div class="row">
                        <div class="main-content col-12 col-md-8 mx-auto">
                            <div class="account-box checkout-page">
                                <a href="#" class="logo">
                                    <img src="~/Content/TopKala/assets/img/logo.png" alt="">
                                </a>
                                <div class="account-box-content">
                                    <form class="form-account">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="checkout-title text-right">مشخصات شما</div>
                                            </div>
                                            <div class="col-12">
                                                <div class="checkout-title text-right">فاکتور: @Model.FactorNumber</div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">گیرنده</div>
                                                <div class="form-account-row">
                                                    @if (Model.UserCompany == null)
                                                    {
                                                        @Html.EditorFor(model => model.UserCompany, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.UserCompany, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.UserCompany, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.UserCompany, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">وضعیت سفارش</div>
                                                <div class="form-account-row">
                                                    @if (Model.UserCompany == null)
                                                    {
                                                        <input class="input-field text-right" value="خالی" disabled />
                                                    }
                                                    else
                                                    {
                                                    <input class="input-field text-right" value=" @ViewBag.Order.OrderStatus.Name" disabled />
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">کوپن تخفیف</div>
                                                <div class="form-account-row">
                                                    @if (Model.UserCompany == null)
                                                    {
                                                        <input class="input-field text-right" value="خالی" disabled />
                                                    }
                                                    else
                                                    {
                                                    <input class="input-field text-right" value=" @ViewBag.Order.OrderCopon.Name" disabled />
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">ایمیل </div>
                                                <div class="form-account-row">
                                                    @if (Model.UserCompany == null)
                                                    {
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="checkout-title text-right">آدرس مقصد</div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">کشور</div>
                                                <div class="form-account-row">
                                                    @if (Model.Country == null)
                                                    {
                                                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">شهر</div>
                                                <div class="form-account-row">
                                                    @if (Model.city == null)
                                                    {
                                                        @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.UserCompany, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">شهرستان</div>
                                                <div class="form-account-row">
                                                    @if (Model.State == null)
                                                    {
                                                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">خیابان</div>
                                                <div class="form-account-row">
                                                    @if (Model.UserStreet == null)
                                                    {
                                                        @Html.TextAreaFor(model => model.UserStreet, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.UserStreet, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.TextAreaFor(model => model.UserStreet, new { @class = "input-field text-right" })
                                                    @Html.ValidationMessageFor(model => model.UserStreet, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">کوچه</div>
                                                <div class="form-account-row">
                                                    @if (Model.UserSuburb == null)
                                                    {
                                                        @Html.EditorFor(model => model.UserSuburb, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.UserSuburb, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.UserSuburb, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.UserSuburb, "", new { @class = "text-danger" })
                                                    }

                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">پلاک</div>
                                                <div class="form-account-row">
                                                    @if (Model.Code == null)
                                                    {
                                                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">تلفن</div>
                                                <div class="form-account-row">
                                                    @if (Model.Telephone == null)
                                                    {
                                                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">شماره موبایل</div>
                                                <div class="form-account-row">
                                                    @if (Model.Mobile == null)
                                                    {
                                                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-account-title">کد پستی</div>
                                                <div class="form-account-row">
                                                    @if (Model.PostCode == null)
                                                    {
                                                        @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "input-field text-right", @placeholder = "نام خود را وارد نمایید" } })
                                                        @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                                                    }
                                                    else
                                                    {
                                                    @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "input-field text-right" } })
                                                    @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-12">

                                                <div class="form-account-row">
                                                    <input type="submit" value="ثبت" class="dk-btn dk-btn-info " />
                                                </div>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    }



    <footer class="mini-footer">
        <nav>
            <div class="container">
                <ul class="menu">
                    <li>
                        <a href="~/Home/Index">صفحه اصلی</a>
                    </li>
                    <li>
                        <a href="~/Manage/Profile">پروفایل</a>
                    </li>
                    <li>
                        <a href="#">تماس با ما</a>
                    </li>
                    <li>
                        <a href="#">همکاری با ایران لوسر</a>
                    </li>

                </ul>
            </div>
        </nav>

    </footer>

</body>
@section scripts
    {
    <!--   Core JS Files   -->
    <script src="~/Content/TopKala/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Content/TopKala/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/TopKala/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
