@model Shop.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangeProfilePassword";

}

<html lang="fa">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/TopKala/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/TopKala/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
          name='viewport' />
    <title>Topkala</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="~/Content/TopKala/assets/fonts/font-awesome/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="~/Content/TopKala/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/now-ui-kit.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/TopKala/assets/css/main.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm("ChangeProfilePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="wrapper default">
            <div class="container">
                <div class="row">
                    <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
                        <div class="account-box">
                            <a href="#" class="logo">
                                <img src="~/Content/TopKala/assets/img/logo.png" alt="">
                            </a>
                            <div class="account-box-title">تغییر رمز عبور</div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="account-box-content">
                                <form class="form-account">
                                    <div class="form-account-title">رمز عبور قبلی</div>
                                    <div class="form-account-row">
                                        <label class="input-label">
                                            <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                        </label>

                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "input-field", @placeholder = "رمز عبور قبلی خود را وارد نمایید" })
                                    </div>
                                    <div class="form-account-title">رمز عبور جدید</div>
                                    <div class="form-account-row">
                                        <label class="input-label">
                                            <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                        </label>

                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "input-field", @placeholder = "رمز عبور جدید خود را وارد نمایید" })
                                    </div>
                                    <div class="form-account-title">تکرار رمز عبور جدید</div>
                                    <div class="form-account-row">
                                        <label class="input-label">
                                            <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                        </label>

                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-field", @placeholder = "رمز عبور جدید خود را مجددا وارد نمایید" })
                                    </div>
                                    <div class="form-account-row form-account-submit">
                                        <div class="parent-btn">
                                            <button type="submit" class="dk-btn dk-btn-info">
                                                تغییر رمز عبور
                                                <i class="now-ui-icons arrows-1_refresh-69"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="mini-footer">
                <nav>
                    <div class="container">
                        <ul class="menu">
                            <li>
                                <a href="#">درباره تاپ کالا</a>
                            </li>
                            <li>
                                <a href="#">فرصت‌های شغلی</a>
                            </li>
                            <li>
                                <a href="#">تماس با ما</a>
                            </li>
                            <li>
                                <a href="#">همکاری با سازمان‌ها</a>
                            </li>

                        </ul>
                    </div>
                </nav>
                <div class="copyright-bar">
                    <div class="container">
                        <p>طراحی توسط گروه <span><a style="color: #d51111;" href="http://webbaran.com">وب باران</a></span></p>
                    </div>
                </div>
            </footer>
        </div>
    }
</body>
    <!--   Core JS Files   -->
    <script src="~/Content/TopKala/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Content/TopKala/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/TopKala/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
    <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
    <script src="~/Content/TopKala/assets/js/plugins/bootstrap-switch.js"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="~/Content/TopKala/assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!--  Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker -->
    <script src="~/Content/TopKala/assets/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>
    <!-- Share Library etc -->
    <script src="~/Content/TopKala/assets/js/plugins/jquery.sharrre.js" type="text/javascript"></script>
    <!-- Control Center for Now Ui Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/Content/TopKala/assets/js/now-ui-kit.js" type="text/javascript"></script>
    <!--  CountDown -->
    <script src="~/Content/TopKala/assets/js/plugins/countdown.min.js" type="text/javascript"></script>
    <!--  Plugin for Sliders -->
    <script src="~/Content/TopKala/assets/js/plugins/owl.carousel.min.js" type="text/javascript"></script>
    <!--  Jquery easing -->
    <script src="~/Content/TopKala/assets/js/plugins/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <!-- Main Js -->
    <script src="~/Content/TopKala/assets/js/main.js" type="text/javascript"></script>

</html>
