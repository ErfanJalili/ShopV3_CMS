@model Shop.Models.Photo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>فرم افزودن تصاویر</h2>
<div class="well">
    @using (Html.BeginForm("Create", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("نام ", new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Decription, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Decription)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("آپلود", new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="file" name="files"
                           multiple="multiple" accept=".jpg, .png, .gif" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <input type="submit" value="آپلود + " class="btn btn-primary" />
                    <div style="color:red">
                        @ViewBag.error
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

