
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Upload", "Dashbourds", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    <div>
        <img id="user_img" height="100" width="90" style="border:solid" />
    </div>
    <div>
        <input type="file" title="search image" id="file" name="file" onchange="show(this)" />
    </div>
    <div>
        نام
    </div>
    <div>
        <input type="text" id="txt_name" name="Name" />
    </div>
    <div>
        توضیحات
    </div>
    <div>
        <input type="text" id="txt_description" name="Description" />
    </div>
    <div>
        Alt
    </div>
    <div>
        <input type="text" id="txt_alt" name="Alt" />
    </div>
    <div>
        <input type="submit" title="save" />
    </div>
}

@section Scripts
    {
   
    <script type="text/javascript">
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
    </script>
}